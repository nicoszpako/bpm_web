<style is:global>
  main {
    margin: auto;
    padding: 0.75rem;
    width: 1100px;
    max-width: 100%;
    color: white;
    line-height: 1.6;
  }
  .project-image {
    max-width: 100% !important;
    overflow: hidden;
  }
  .center { 
    display: block; margin-left: auto; margin-right: auto; width: 50%;
   } 

  .project-cards {
  }

  .intro {
    height: min(60vw,90vh);
  }
  .video-wrapper {
    background: #111111;
    padding: calc(1.5rem - 1px);
    line-height: 1.4;
    border-radius: 8px;
    margin-bottom: 2rem;
  }
  .project-column > div {
    max-width: 100%;
    overflow: hidden;
  }
  .projects-alt > li {
    gap: 1rem !important;
  }
  .astro-a {
    position: absolute;
    top: -32px;
    left: 50%;
    transform: translatex(-50%);
    width: 220px;
    height: auto;
    z-index: -1;
  }

  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
    font-size: 2.75rem;
  }
  .instructions {
    margin-bottom: 2rem;
    border: 1px solid rgba(var(--accent-light), 25%);
    background: linear-gradient(
      rgba(var(--accent-dark), 66%),
      rgba(var(--accent-dark), 33%)
    );
    padding: 1.5rem;
    border-radius: 8px;
  }
  .instructions code {
    font-size: 0.8em;
    font-weight: bold;
    background: rgba(var(--accent-light), 12%);
    color: rgb(var(--accent-light));
    border-radius: 4px;
    padding: 0.3em 0.4em;
  }
  .instructions strong {
    color: rgb(var(--accent-light));
  }
  .link-card-grid {
    display: grid;
    gap: 0;
    padding: 0;
  }
  .read-more {
    color: #fff;
  }
  details {
    position: relative;
    top: -1px;
    margin-top: 0;
    margin-bottom: 1rem;
    padding: 1rem;
    border-radius: 0 0 8px 8px;
    max-width: 900px;
  }
  details > div {
    max-width: 830px;
  }

  canvas {
    left: 50%;
    transform: translate(-50%,0);
    position: absolute;
  }

  summary:hover {
    cursor: pointer;
  }
  .partenaires-carousel-container {
  overflow: hidden;
  position: relative;
  margin-top: 2rem;
}

  .partenaires-carousel {
    display: flex;
    gap: 2rem;
    animation: partenaires-scroll 25s linear infinite;
    padding: 1rem 0;
  }

  .partenaires-logo {
    height: 20vh;
    width: auto;
    flex-shrink: 0;
    transition: transform 0.3s ease, filter 0.3s ease;
  }

  .partenaires-logo:hover {
    filter: none;
    transform: scale(1.05);
  }

  @keyframes partenaires-scroll {
    0% {
      transform: translateX(0%);
    }
    100% {
      transform: translateX(-100%);
    }
  }
  .outils-section {
  text-align: center;
}

.outils-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
  gap: 2rem;
  margin-top: 2rem;
  padding: 0 1rem;
  justify-items: center;
}

.outil-card {
  padding: 1.5rem 1rem;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  max-width: 280px;
  text-align: center;
}

.outil-card:hover {
  transform: translateY(-4px);
}

.outils-logo {
  max-height: 150px;
  width: auto;
  margin: 0 auto 1rem auto;
  filter: brightness(1.2);
  padding: 3vh;
  border-radius: 2vh;
  background-color: #373737;
  transition: filter 0.3s ease;
}

.outils-logo:hover {
  filter: none;
}

.outil-titre {
  font-size: 1.2rem;
  font-weight: 600;
  color: white;
  margin-bottom: 0.5rem;
}

.outil-desc {
  font-size: 0.95rem;
  color: #aaa;
  line-height: 1.4;
}

.orga-img {
  margin-top: 8vh;
}

.matos {
  }
</style>

<script></script>
